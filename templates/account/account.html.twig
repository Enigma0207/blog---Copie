{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Hello {{ app.user }}! et bienvenue chez toi ✅</h3>
    <h4>Articles de l'utilisateur:</h4>
    <ul>
        {% for article in articles %}
            <div class="container">
                <div class="img-fluid">
                    <img src="{{asset('images/articles/' ~ article.image)}}" alt="{{ article.title }}">
                </div>
                <div class="content">
                    <p class="date">Ecrit le {{ article.createdAt | date("d/m/y")  }} à {{ article.createdAt | date("H:m") }} par
                        <span class="author">{{ article.auteur }}</span></p>
                    <h5 class="title"> {{article.title }}</h5>
                    <p class="content">{{ article.content | raw }}</p>
                </div>
            </div>
        {% endfor %}
    </ul>
    

</div>
{% endblock %}
